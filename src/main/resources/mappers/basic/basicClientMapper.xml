<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="com.spring.erp_ordit.dao.basic.ClientDAO">

<!-- 거래처 목록 조회 -->
<select id="clientList" resultType="com.spring.erp_ordit.dto.basic.ClientsDTO">
   SELECT * FROM client_tbl
    ORDER BY client_code
</select>

<!-- 거래저 상세보기 -->
<select id="clientDetail" resultType="com.spring.erp_ordit.dto.basic.ClientsDTO">
   SELECT * FROM client_tbl
    WHERE client_code=#{client_code} 
</select>

</mapper>
